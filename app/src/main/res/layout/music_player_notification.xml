<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#555555"
    android:id="@+id/musicplayernotificationxml">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:id="@+id/songimg"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/songdes"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="40dp"
            android:textSize="15dp"
            android:maxLines="1"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>
        <Button
            android:id="@+id/cancelbtn"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/cancelbutton"
            android:visibility="visible"/>

        <Button
            android:id="@+id/backwordbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_weight="20.05"
            android:layout_marginLeft="130dp"
            android:background="@drawable/previousbutton"/>

        <Button
            android:id="@+id/pausebtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_weight="20.05"
            android:layout_marginLeft="190dp"
            android:background="@drawable/pausebutton"
            />
        <Button
            android:id="@+id/playBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_weight="26.05"
            android:layout_marginLeft="219dp"
            android:background="@drawable/playbutton"/>
        <Button
            android:id="@+id/forwordbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_weight="26.05"
            android:layout_marginLeft="280dp"
            android:background="@drawable/nextbutton"/>
    </RelativeLayout>

</LinearLayout>